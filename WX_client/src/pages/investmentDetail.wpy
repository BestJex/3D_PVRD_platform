<style lang="scss">
@import "../ui/zanui/icon.scss";
@import "../ui/zanui/panel.scss";
@import "../ui/zanui/cell.scss";
.container {
  position: relative;
}
.bacImg {
  height: 200px;
  width: 100%;
  position: relative;
}
.backBtn {
  margin-top: 30px;
  color: white;
  z-index: 1;
  position: fixed;
  left: 20px;
  transform: rotate(180deg);
}
.backBtn:hover {
  color: #f3f3f3;
}
.detail {
  width: calc(100%-30px);
  padding: 10px 15px;
}
.zan-panel {
  width: 100%;
  background-color: #2d2d2d;
}
.zan-cell {
  padding: 8px 15px;
  border: 1px solid #2d2d2d;
}
.zan-cell__bd {
  font-size: 12px;
  color: white;
  margin-top: 10px;
}
.zan-cell__bd text {
  font-size: 10px;
}
.apply-btn {
  position: relative;
  height: 30px;
  line-height: 30px;
  width: 50%;
  background-color: #f55a5d;
  color: white;
  margin-top: 30px;
}
</style>
<template>
  <scroll-view scroll-y class="container">
    <image class="bacImg" src="{{javaServer}}{{companyDetail.bookImg}}" @tap="show({{companyId}})"></image>
    <view class="backBtn zan-icon zan-icon-arrow" @tap="goBack"></view>
    <view class="detail">
      <view class="zan-panel">
        <view class="zan-cell">
          <view class="zan-cell__bd">投资机构名称：
            <text>{{companyDetail.companyName}}</text>
          </view>
        </view>
        <view class="zan-cell">
          <view class="zan-cell__bd">投资机构CEO：
            <text>{{companyDetail.companyCeo}}</text>
          </view>
        </view>
        <view class="zan-cell">
          <view class="zan-cell__bd">投资机构简介：
            <text>{{companyDetail.companyDescription}}</text>
          </view>
        </view>
      </view>
    </view>
    <button class="apply-btn" @tap="apply"  wx:if="{{userType == 'chuangye'}}">申请投资</button>
    <zanToast></zanToast>
  </scroll-view>
</template>

<script>
import wepy from "wepy";
import NetUtil from "../util/netUtil";
import javaServer from "../config";
import zanToast from '../ui/components/zan-toast'

export default class InvestmentDetail extends wepy.page {
  components = {
    zanToast
  };
  data = {
    companyDetail: {},
    companyId: 0,
    javaServer: "",
    userType: ""
  };
  methods = {
    goBack() {
      wx.navigateBack({
        delta: 1
      });
    },
    show(id) {
      wx.navigateTo({
        url: `./threeD?id=${id}`
      });
    },
    apply() {
      NetUtil.postJson("http://192.168.43.214:8888/server/ifApplyTouZi", {
        applyUserId: this.$parent.globalData.userId,
        applyCompanyId: this.companyId
      }).then(data => {
        if (data.data.application == "已申请") {
          this.$invoke('zanToast', 'showZanToast', { title: '您已申请过该公司', timeout: 2000 });
          return;
        } else {
          wx.navigateTo({
            url: `./applyDetail?id=${this.companyId}`
          });
        }
      });
    }
  };
  events = {};
  onLoad(option) {
    this.userType = this.$parent.globalData.userType;
    this.javaServer = javaServer;
    this.$apply();
    if (option.id) {
      NetUtil.getJson(
        `${javaServer}/api/pioneer/getPioneerDetail?id=${option.id}`
      ).then(data => {
        this.companyDetail = data.data;
        this.companyId = data.data.companyId;
        this.$apply();
      });
    } else if (option.name) {
      NetUtil.getJson(
        `${javaServer}/api/pioneer/getPioneerDetail?name=${option.name}`
      ).then(data => {
        this.companyDetail = data.data;
        this.$apply();
      });
    }
  }
}
</script>
